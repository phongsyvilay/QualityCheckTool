<Window x:Class="VioAlarmQualityCheckUtility.Windows.UsernamePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VioAlarmQualityCheckUtility.Windows"
        mc:Ignorable="d"
        Title="Username and Password" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="top" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0, 20, 0, 0">
            <TextBlock Text="Username"></TextBlock>
            <TextBox x:Name="usernameBox" Width="175" Margin="5, 0, 0, 0"></TextBox>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal"  Margin="4, 0, 0, 0">
            <TextBlock Text="Password"></TextBlock>
            <TextBox x:Name="passwordBox" Width="175" Margin="5, 0, 0, 0"></TextBox>
        </StackPanel>
        <Button VerticalAlignment="Bottom" Content="Confirm" Width="50" Margin="0, 0, 0, 20" Click="confirm_OnClick"></Button>
    </Grid>
</Window>
