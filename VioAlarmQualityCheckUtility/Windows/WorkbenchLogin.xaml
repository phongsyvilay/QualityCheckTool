<Window x:Class="VioAlarmQualityCheckUtility.Windows.WorkbenchLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VioAlarmQualityCheckUtility.Windows"
        mc:Ignorable="d"
        Title="Login to Workbench" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock HorizontalAlignment="Left" FontWeight="DemiBold" FontSize="16">Username</TextBlock>
            <TextBox x:Name="WorkUser" Width="175" Height="25"/>
            <TextBlock  HorizontalAlignment="Left" FontWeight="DemiBold" FontSize="16">Password</TextBlock>
            <PasswordBox x:Name="WorkPassword" Margin="0,0,0,5"  Width="175" Height="25"/>
            <Button x:Name="WorkButton" Content="Login" Margin="0,5,0,5" Width="70" Height="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="WorkBenchSignInButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
